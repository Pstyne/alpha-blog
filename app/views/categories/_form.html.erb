<%= render "shared/errors", resource: @category %>
<%= form_with(model: @category, class: "card p-3 mb-3 shadow bg-info rounded", local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :name, "Category name", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.text_field :name, class: "form-control", placeholder: "Enter a name" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <%= form.submit class: "btn btn-lg btn-outline-light"  %>
  </div>
<% end %>