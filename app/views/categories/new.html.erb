<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", resource: @category %>
      <%= form_with(model: @category, class: "card p-3 mb-3 shadow bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :name, class: "form-control", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-lg btn-outline-light"  %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to '[ Back to Articles ]', articles_path, class: "text-info" %>
      </div>
    </div>

  </div>
</div>