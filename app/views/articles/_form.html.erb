<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: article, class: "card p-3 mb-3 shadow bg-info rounded", local: true) do |form| %>
        <% if article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
              <% article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control", placeholder: "Article title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :content, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_area :content, rows: 10, class: "form-control", placeholder: "Article content" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-lg btn-outline-light" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to '[ Back to Articles ]', articles_path, class: "text-info" %>
      </div>
    </div>

  </div>
</div>