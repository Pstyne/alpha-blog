<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", resource: @article %>
      <%= form_with(model: article, class: "card p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Article title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :content, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_area :content, rows: 10, class: "form-control shadow rounded", placeholder: "Article content" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Select categories (can be empty)" }, { multiple: true, class: "custom-select shadow rounded" }) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-lg btn-outline-light" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to '[ Back to Articles ]', articles_path, class: "text-info" %>
      </div>
    </div>

  </div>
</div>